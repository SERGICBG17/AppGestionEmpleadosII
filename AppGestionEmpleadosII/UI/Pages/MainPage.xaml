<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppGestionEmpleadosII.UI.PagesModel"
             x:Class="AppGestionEmpleadosII.UI.Pages.MainPage"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="10">

            <FlexLayout JustifyContent="Center" Wrap="Wrap" Margin="0,20,0,10">
                <Grid Padding="10">
                    <Frame CornerRadius="50" WidthRequest="100" HeightRequest="100" Padding="0" HasShadow="True" BorderColor="#D1D1D1">
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="{Binding TotalEmpleados}" FontSize="22" FontAttributes="Bold" TextColor="#512BD4" HorizontalOptions="Center"/>
                            <Label Text="Empleados" FontSize="11" TextColor="Gray" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
                <Grid Padding="10">
                    <Frame CornerRadius="50" WidthRequest="100" HeightRequest="100" Padding="0" HasShadow="True" BorderColor="#D1D1D1">
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="{Binding TotalDepartamentos}" FontSize="22" FontAttributes="Bold" TextColor="#27ae60" HorizontalOptions="Center"/>
                            <Label Text="Depts" FontSize="11" TextColor="Gray" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
                <Grid Padding="10">
                    <Frame CornerRadius="50" WidthRequest="100" HeightRequest="100" Padding="0" HasShadow="True" BorderColor="#D1D1D1">
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="{Binding TotalSedes}" FontSize="22" FontAttributes="Bold" TextColor="#e67e22" HorizontalOptions="Center"/>
                            <Label Text="Sedes" FontSize="11" TextColor="Gray" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </FlexLayout>

            <Label Text="Acceso Directo" HorizontalOptions="Center" FontAttributes="Bold" FontSize="20" Margin="0,10"/>

            <FlexLayout Wrap="Wrap" Direction="Row" JustifyContent="Center" AlignItems="Center" Margin="10">

                <Grid Padding="8">
                    <Frame CornerRadius="12" HasShadow="True" BorderColor="#D1D1D1" Padding="10" BackgroundColor="White" WidthRequest="280" HeightRequest="110">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding IrAEmpleadosCommand}" />
                        </Frame.GestureRecognizers>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#F5F5F5" />
                                            <Setter Property="Scale" Value="1.03" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="EMPLEADOS" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center"/>
                            <Label Text="Ver Plantilla" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <Grid Padding="8">
                    <Frame CornerRadius="12" HasShadow="True" BorderColor="#D1D1D1" Padding="10" BackgroundColor="White" WidthRequest="280" HeightRequest="110">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding IrADepartamentosCommand}" />
                        </Frame.GestureRecognizers>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#F5F5F5" />
                                            <Setter Property="Scale" Value="1.03" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="DEPARTAMENTOS" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center"/>
                            <Label Text="Organización" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <Grid Padding="8">
                    <Frame CornerRadius="12" HasShadow="True" BorderColor="#D1D1D1" Padding="10" BackgroundColor="White" WidthRequest="280" HeightRequest="110">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding IrASedesCommand}" />
                        </Frame.GestureRecognizers>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#F5F5F5" />
                                            <Setter Property="Scale" Value="1.03" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="SEDES" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center"/>
                            <Label Text="Ubicaciones" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <Grid Padding="8">
                    <Frame CornerRadius="12" HasShadow="True" BorderColor="#D1D1D1" Padding="10" BackgroundColor="White" WidthRequest="280" HeightRequest="110">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding IrAGraficosCommand}" />
                        </Frame.GestureRecognizers>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroupList>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="#F5F5F5" />
                                            <Setter Property="Scale" Value="1.03" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateGroupList>
                        </VisualStateManager.VisualStateGroups>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="GRÁFICOS" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center"/>
                            <Label Text="Análisis y datos" FontSize="12" TextColor="Gray" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>