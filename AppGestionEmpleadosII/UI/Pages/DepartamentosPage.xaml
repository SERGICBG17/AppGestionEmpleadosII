<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGestionEmpleadosII.UI.Pages.DepartamentosPage"
             Title="Departamentos">

    <Grid Margin="10">
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <Frame WidthRequest="220" HeightRequest="140" Margin="8" Padding="15" CornerRadius="10" HasShadow="True" BackgroundColor="White">
                    <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                        <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="15" HorizontalTextAlignment="Center" TextColor="Black"/>
                        <Label Text="{Binding Correo}" FontSize="11" TextColor="Gray" HorizontalTextAlignment="Center"/>
                        <Label Text="{Binding Ganancias, StringFormat='{0:C} ganancias'}" FontSize="11" TextColor="#27ae60" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </Grid>
</ContentPage>