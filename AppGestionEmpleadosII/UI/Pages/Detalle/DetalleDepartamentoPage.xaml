<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGestionEmpleadosII.UI.Pages.Detalle.DetalleDepartamentoPage"
             Title="DetalleDepartamentoPage">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="{Binding DepartamentoDetalle.Nombre}" 
           FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />

       
        <HorizontalStackLayout Spacing="5">
           <Label Text="Ubicado en la Sede:" FontAttributes="Bold" />
           <Label Text="{Binding DepartamentoDetalle.Sede.Nombre}" />
        </HorizontalStackLayout>
   

        <BoxView HeightRequest="1" Color="Silver" />

        <Label Text="Correo:" FontAttributes="Bold" />
        <Label Text="{Binding DepartamentoDetalle.Correo}" />
        <Label Text="Ganancias:" FontAttributes="Bold" />
        <Label Text="{Binding DepartamentoDetalle.Ganancias}" />

        <BoxView HeightRequest="1" Color="Silver" />

        <Label Text="Empleados en este departamento:" FontAttributes="Bold" FontSize="18" />

        <VerticalStackLayout BindableLayout.ItemsSource="{Binding DepartamentoDetalle.Empleados}" 
                         Spacing="5" Margin="10,0,0,0">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="5">
                        <Label Text="â€¢" />
                        <Label Text="{Binding Nombre}" />
                        <Label Text="{Binding Apellido}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>

        <Button Text="Volver a Departamentos" 
            Command="{Binding VolverCommand}" 
            Margin="0,20,0,0" />

    </VerticalStackLayout>
</ContentPage>