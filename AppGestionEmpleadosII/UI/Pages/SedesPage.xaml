<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGestionEmpleadosII.UI.Pages.SedesPage"
             Title="Sedes">

    <Grid>
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <Frame WidthRequest="250" HeightRequest="130" Margin="10" Padding="0" CornerRadius="12" HasShadow="True" BorderColor="#512BD4">
                    <Grid RowDefinitions="Auto, *">
                        <BoxView Grid.Row="0" HeightRequest="5" Color="#512BD4"/>
                        <VerticalStackLayout Grid.Row="1" Padding="15" Spacing="5">
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Nombre}" FontSize="16" FontAttributes="Bold" TextColor="Black"/>
                            </HorizontalStackLayout>
                            <Label Text="{Binding Direccion}" FontSize="12" TextColor="#444" LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </Grid>
</ContentPage>