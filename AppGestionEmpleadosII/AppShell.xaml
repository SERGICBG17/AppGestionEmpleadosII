<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppGestionEmpleadosII.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:AppGestionEmpleadosII.Pages"
    Title="AppGestionEmpleadosII">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate pages:MainPage}" Route="MainPage" />
        <ShellContent Title="Empleados" ContentTemplate="{DataTemplate pages:EmpleadosPage}" Route="EmpleadosPage" />
        <ShellContent Title="Departamentos" ContentTemplate="{DataTemplate pages:DepartamentosPage}" Route="DepartamentosPage" />
        <ShellContent Title="Sedes" ContentTemplate="{DataTemplate pages:SedesPage}" Route="SedesPage" />
        <ShellContent Title="Configuracion" ContentTemplate="{DataTemplate pages:SettingsPage}" Route="SettingsPage" />
    </TabBar>

</Shell>
